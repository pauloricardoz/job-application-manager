{
  "root": true,
  "extends": [
    "trybe-backend"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "function-paren-newline": "off"
  },
  "overrides": [
    {
      "files": [
        "*.test.js"
      ],
      "rules": {
        "mocha/max-top-level-suites": "off",
        "no-unused-expressions": "off",
        "sonarjs/no-identical-functions": "off",
        "max-lines": "off",
        "sonarjs/no-duplicate-string": "off",
        "mocha/no-mocha-arrows": "off",
      }
    }
  ]
}